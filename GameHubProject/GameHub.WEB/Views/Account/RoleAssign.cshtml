@model GameHub.Domain.Request.Role.RoleAssignRequest

@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>RoleAssign</h1>

<h4>RoleAssignRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RoleAssign">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="Id" value="@Model.Id" />
            @for (var i=0;i <Model.Roles.Count; i++)
            {
                <div class="form-group row">
                    <input hidden asp-for="@Model.Roles[i].Name" class="form-control" />
                    <input hidden asp-for="@Model.Roles[i].Id" class="form-control" />
                    <label class="control-label">@Model.Roles[i].Name</label>
                    <input type="checkbox" asp-for="@Model.Roles[i].Selected"/>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

