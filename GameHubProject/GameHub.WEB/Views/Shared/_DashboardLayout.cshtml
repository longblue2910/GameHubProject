@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="H Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>@ViewData["Title"]</title>

    <!-- Fontfaces CSS-->
    <link href="~/lib/cooladmin/css/font-face.css" rel="stylesheet" media="all">
    <link href="~/lib/cooladmin/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="~/lib/cooladmin/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href="~/lib/cooladmin/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">

    <!-- Bootstrap CSS-->
    <link href="~/lib/cooladmin/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">

    <!-- Vendor CSS-->
    <link href="~/lib/cooladmin/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="~/lib/cooladmin/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="~/lib/cooladmin/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="~/lib/cooladmin/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="~/lib/cooladmin/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="~/lib/cooladmin/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/lib/cooladmin/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">
    <link href="~/lib/css/site.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/jquery.dataTables.css" rel="stylesheet" />
    <!-- Main CSS-->
    <link href="~/lib/cooladmin/css/theme.css" rel="stylesheet" media="all">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    @RenderSection("styles", false)
</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <header class="header-mobile d-block d-lg-none">
            <div class="header-mobile__bar">
                <div class="container-fluid">
                    <div class="header-mobile-inner">
                        <a class="logo" href="index.html">
                            <img src="~/lib/cooladmin/images/icon/logo.png" alt="CoolAdmin" />
                        </a>
                        <button class="hamburger hamburger--slider" type="button">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <nav class="navbar-mobile">
                <div class="container-fluid">
                    <ul class="navbar-mobile__list list-unstyled">
                        <li>
                            <a asp-controller="Category" asp-action="Index">
                                <i class="fa-tags"></i>Thể loại
                            </a>
                        </li>

                    </ul>
                </div>
            </nav>
        </header>
        <!-- END HEADER MOBILE-->
        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar d-none d-lg-block">
            <div class="logo">
                <a href="#">
                    <img src="~/lib/cooladmin/images/icon/logo.png" alt="Cool Admin" />
                </a>
            </div>
            <div class="menu-sidebar__content js-scrollbar1">
                <nav class="navbar-sidebar">
                    <ul class="list-unstyled navbar__list">
                        <li>
                            <a asp-controller="Category" asp-action="Index">
                                <i class="fas fa-tag"></i>Thể Loại
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Brand" asp-action="Index">
                                <i class="fas fa-tag"></i>Hãng
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Game" asp-action="Index">
                                <i class="fas fa-tag"></i>Game
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Index">
                                <i class="fas fa-tag"></i>Account
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <!-- END MENU SIDEBAR-->
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <header class="header-desktop">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="header-wrap">
                            <form class="form-header" action="" method="POST">
                                <input class="au-input au-input--xl" type="text" name="search" placeholder="Search for datas &amp; reports..." />
                                <button class="au-btn--submit" type="submit">
                                    <i class="zmdi zmdi-search"></i>
                                </button>
                            </form>
                            <div class="header-button">
                                @if (User.Identity.Name != null)
                                {
                                    <div class="dropdown">
                                        <input hidden id="UserId" value="@HttpContextAccessor.HttpContext.Session.GetString("Id")" />
                                        <div id="image"></div>

                                        <div class="dropdown-content" id="add" style="z-index:99999999999;">
                                            <a asp-controller="Account" asp-action="Logout">
                                                Logout
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- END HEADER DESKTOP-->
            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTAINER-->
    </div>

    <!-- Jquery JS-->
    <script src="~/lib/jquery3.5.1/jquery.js"></script>
    <!-- Bootstrap JS-->
    <script src="~/lib/cooladmin/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="~/lib/cooladmin/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="~/lib/cooladmin/vendor/slick/slick.min.js"></script>
    <script src="~/lib/cooladmin/vendor/wow/wow.min.js"></script>
    <script src="~/lib/cooladmin/vendor/animsition/animsition.min.js"></script>
    <script src="~/lib/cooladmin/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
    <script src="~/lib/cooladmin/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/lib/cooladmin/vendor/counter-up/jquery.counterup.min.js"></script>
    <script src="~/lib/cooladmin/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/lib/cooladmin/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/lib/cooladmin/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/lib/cooladmin/vendor/select2/select2.min.js"></script>
    <script src="~/lib/bootbox/bootbox.min.js"></script>
    <script src="~/lib/jquery-validate1.19.2/jquery.validate.js"></script>
    <script src="~/lib/jquery-validate1.19.2/additional-methods.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <!-- Main JS-->
    <script src="~/lib/cooladmin/js/main.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script>
        var id = $('#UserId').val();
        $(document).ready(function () {
            $.ajax({
                url: `/Account/Get/${id}`,
                method: 'GET',
                dataType: 'JSON',
                success: function (response) {
                    console.log(response);
                    $("#image").append(`
                                    <img src="/images/Avatar/${response.imagePath}" style="border-radius:50%" width="36px" height="36px" alt="avatar" />
                                    <span class="alert-success">${response.userName}</button>
                                `);
                }
            });
        });

    </script>
    @RenderSection("scripts", false)
    @RenderSection("tinyMCE", false)

</body>
</html>
<!-- end document-->