@model List<GameView>
@{
    ViewData["Title"] = "Game Index";
}
<div class=" row">
    <a href="javascript:void(0);" class="btn btn-info" onclick="game.openModal()">Tạo game mới</a>
    <div class="ajax-loader">
        <img src="~/images/loading.gif" class="img-responsive" />
    </div>
    <table id="tbModule" class="table table-borderless table-striped table-earning">
        <thead class="thead-dark">
            <tr>
                <th>Game Id</th>
                <th>Tên Game</th>
                <th>Hình Ảnh</th>
                <th>Thể Loại</th>
                <th>Hãng</th>
                <th>Ngày Tạo</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody id="gameTable">
        </tbody>
    </table>
</div>

<div style="margin-top:100px;" class="modal" id="addEditgameModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">


            <div class="modal-header">
                <h4 class="modal-title">Tạo Game Mới</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <form id="frmAddEditgame">
                    <input hidden name="GameId" id="GameId" value="0" />
                    <div class="row form-group">
                        <label for="PathImage" class="col-3">Hình ảnh :</label>
                        <div class="col-9">
                            <input type="file" class="btn btn-dark" placeholder="Chọn hình ảnh"
                                   id="PathImage" name="PathImage"
                                   data-rule-required="true"
                                   data-msg-required="Path game is required">
                        </div>
                    </div>
                    <div class="row form-group">
                        <label for="GameName" class="col-3">Tên game:</label>
                        <div class="col-9">
                            <input type="text" class="form-control" placeholder="Nhập tên game"
                                   id="GameName" name="GameName"
                                   data-rule-required="true"
                                   data-msg-required="Game name is required">
                        </div>
                    </div>
                    <div class="row form-group">
                        <label for="BrandId" class="col-3">Tên hãng:</label>
                        <div class="col-9">
                            <select class="custom-select"
                                    id="BrandId" name="BrandId"
                                    data-rule-required="true"
                                    data-msg-required="Brand name is required">
                                <option value="">Chọn hãng</option>
                                <option value="AL">Alabama</option>
                                <option value="WY">FC</option>
                                <option value="WY">Wyoming</option>
                            </select>
                        </div>
                    </div>
                    <div class="row form-group">
                        <label for="Categorys" class="col-3">Tên loại:</label>
                        <div class="col-9">
                            <select class="js-example-basic-multiple" name="states[]" multiple="multiple">
                                <option value="AL">Alabama</option>
                                <option value="WY">FC</option>
                                <option value="WY">Wyoming</option>
                            </select>
                        </div>
                    </div>
                    <div class="row form-group">
                        <label for="Description" class="col-3">Mô tả:</label>
                        <div class="col-9">
                            <textarea style="height:200px" class="form-control"
                                      id="Description" name="Description"
                                      data-rule-required="true"
                                      data-msg-required="Description is required">
                            </textarea>
                        </div>
                    </div>
                </form>

            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <a href="javascript:;" class="btn btn-primary" onclick="game.save()">Save</a>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/Dashboad/game.js"></script>
}
@section tinyMCE{
    <environment include="Development">
        <script src="~/lib/tinymce/tinymce.min.js"></script>
        <script>
            tinymce.init({
                selector: 'textarea',
                theme: 'modern',
                plugins: [
                    'advlist autolink lists link image charmap print preview hr anchor pagebreak',
                    'searchreplace wordcount visualblocks visualchars code fullscreen',
                    'insertdatetime media nonbreaking save table contextmenu directionality',
                    'emoticons paste textcolor colorpicker textpattern imagetools'
                ],
                toolbar1:
                    'insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
                toolbar2: 'print preview media | forecolor backcolor emoticons',
                image_advtab: true,
                content_css: [
                    '//fast.fonts.net/cssapi/e6dc9b99-64fe-4292-ad98-6974f93cd2a2.css',
                    '//www.tinymce.com/css/codepen.min.css'
                ]
            });
        </script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/4.9.11/tinymce.min.js"></script>
        <script>
            tinymce.init({
                selector: 'textarea',
